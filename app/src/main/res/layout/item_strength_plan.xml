<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_margin_10dp"
    android:background="@drawable/border_bottom"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginBottom="@dimen/padding_margin_10dp">

    <TextView
        android:id="@+id/tv_projects"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <cn.refactor.library.SmoothCheckBox
        android:id="@+id/scb_icon_select"
        android:layout_width="@dimen/padding_margin_16dp"
        android:layout_height="@dimen/padding_margin_16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/fab_margin"
        app:color_checked="?attr/colorPrimary" />

</LinearLayout>