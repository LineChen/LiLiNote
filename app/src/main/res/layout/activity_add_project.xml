<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".strength.activity.StrengthActivity"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_margin_10dp">

            <ImageView
                android:id="@+id/iv_sample"
                android:layout_width="@dimen/wh_100dp"
                android:layout_height="@dimen/wh_100dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_plus"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_marginTop="@dimen/padding_margin_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_projects"
                android:layout_marginTop="@dimen/padding_margin_10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
