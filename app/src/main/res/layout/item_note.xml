<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/wh_6dp"
        card_view:cardElevation="@dimen/wh_4dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="@dimen/wh_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/note_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/wh_8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/ts_20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/note_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note_title"
                android:layout_marginBottom="@dimen/wh_8dp"
                android:textColor="@color/black_light_31" />

            <TextView
                android:id="@+id/note_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/note_content"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/wh_12dp"
                android:textStyle="italic" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>