<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom"
    >

    <LinearLayout
        android:id="@+id/ll_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding_margin_5dp">

        <View
            android:layout_width="@dimen/wh_11dp"
            android:layout_height="@dimen/wh_11dp"
            android:background="?attr/colorPrimary"/>
        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_8dp"
            android:text="10æœˆ"
            android:textSize="@dimen/ts_20sp"
            android:textColor="@color/title_c1"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/padding_margin_4dp"
        android:layout_marginLeft="@dimen/padding_margin_24dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/title_c1"
            android:text="2016.10.10"
            android:textSize="@dimen/ts_14sp"/>

            <TextView
                android:id="@+id/tv_projects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_4dp"
                android:lineSpacingExtra="@dimen/padding_margin_4dp"
                android:textSize="@dimen/ts_14sp"/>

    </LinearLayout>



</LinearLayout>